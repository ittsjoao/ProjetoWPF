<Window x:Class="ProjetoWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetoWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="White" Margin="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="#34495E" CornerRadius="20,0,0,20" Padding="10">
                <StackPanel>
                    <Border Background="White" CornerRadius="10" Height="60" Width="80" Margin="0,20,0,40">
                        <TextBlock Text="Logo" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                    </Border>
                    <Button Content="Home" Click="BtnHome_Click" Style="{StaticResource NavButtonStyle}" />
                    <Button Content="Cliente" Click="BtnCliente_Click" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Notas" Click="BtnNotas_Click" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Config" Click="BtnConfig_Cick" Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Border>
            <!-- Main Content Area -->
                <Border Grid.Column="1" Background="#F5F5F5" CornerRadius="0,20,20,0" Padding="10">
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>
            </Border>
        </Grid>
    </Border>
</Window>