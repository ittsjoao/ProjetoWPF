<Page x:Class="ProjetoWPF.ConfigPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#F5F5F5">
    <Page.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Cabeçalho -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Configurações do Sistema" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"/>
                <TextBlock Text="Personalize as configurações do seu sistema" 
                           FontSize="14" 
                           Foreground="#7F8C8D"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Conteúdo -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Seção: Identidade Visual -->
                <Border Background="White" 
                        CornerRadius="10" 
                        Padding="25"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Identidade Visual" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#34495E"
                                   Margin="0,0,0,20"/>
                        
                        <!-- Upload de Logo -->
                        <Border BorderBrush="#BDC3C7" 
                                BorderThickness="2" 
                                CornerRadius="8"
                                Background="#F8F9FA"
                                Padding="20"
                                Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Preview da Logo -->
                                <Border Grid.Column="0"
                                        Width="150" 
                                        Height="150" 
                                        BorderBrush="#BDC3C7" 
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Background="White"
                                        Margin="0,0,20,0">
                                    <Grid>
                                        <Image x:Name="imgLogo" 
                                               Stretch="Uniform"
                                               Margin="10"/>
                                        <TextBlock Text="Logo da Empresa" 
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="#95A5A6"
                                                   FontSize="14">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Source={x:Reference imgLogo}, Path=Source}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                                
                                <!-- Informações e botões -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Logo da Empresa" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#2C3E50"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="Formatos aceitos: PNG, JPG, JPEG (Máx: 2MB)" 
                                               FontSize="12" 
                                               Foreground="#7F8C8D"
                                               Margin="0,0,0,15"/>
                                    
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Selecionar Logo" 
                                                x:Name="btnSelecionarLogo"
                                                Style="{StaticResource ButtonStyle}"/>
                                        <Button Content="Remover" 
                                                x:Name="btnRemoverLogo"
                                                Background="#E74C3C"
                                                Style="{StaticResource ButtonStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- Nome da Empresa -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Nome da Empresa" 
                                       FontSize="14" 
                                       FontWeight="SemiBold"
                                       Foreground="#2C3E50"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="txtNomeEmpresa" 
                                     Padding="10"
                                     FontSize="13"
                                     BorderBrush="#BDC3C7"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Seção: Dados da Empresa -->
                <Border Background="White" 
                        CornerRadius="10" 
                        Padding="25"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Dados da Empresa" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#34495E"
                                   Margin="0,0,0,20"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="CNPJ" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="txtCnpj" 
                                         Padding="10"
                                         FontSize="13"
                                         BorderBrush="#BDC3C7"
                                         BorderThickness="1"
                                         Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Endereço" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="txtEndereco" 
                                         Padding="10"
                                         FontSize="13"
                                         BorderBrush="#BDC3C7"
                                         BorderThickness="1"
                                         Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Cidade" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="txtCidade" 
                                         Padding="10"
                                         FontSize="13"
                                         BorderBrush="#BDC3C7"
                                         BorderThickness="1"
                                         Margin="0,0,0,15"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Telefone" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="txtTelefone" 
                                         Padding="10"
                                         FontSize="13"
                                         BorderBrush="#BDC3C7"
                                         BorderThickness="1"
                                         Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Email" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="txtEmail" 
                                         Padding="10"
                                         FontSize="13"
                                         BorderBrush="#BDC3C7"
                                         BorderThickness="1"
                                         Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Estado" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="txtEstado" 
                                         Padding="10"
                                         FontSize="13"
                                         BorderBrush="#BDC3C7"
                                         BorderThickness="1"
                                         Margin="0,0,0,15"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Seção: Preferências do Sistema -->
                <Border Background="White" 
                        CornerRadius="10" 
                        Padding="25"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Preferências do Sistema" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#34495E"
                                   Margin="0,0,0,20"/>
                        
                        <CheckBox x:Name="chkNotificacoes" 
                                  Content="Ativar notificações"
                                  FontSize="14"
                                  Margin="0,0,0,10"
                                  IsChecked="True"/>
                        
                        <CheckBox x:Name="chkBackupAutomatico" 
                                  Content="Backup automático diário"
                                  FontSize="14"
                                  Margin="0,0,0,10"/>
                        
                        <CheckBox x:Name="chkModoEscuro" 
                                  Content="Modo escuro (em breve)"
                                  FontSize="14"
                                  Margin="0,0,0,10"
                                  IsEnabled="False"/>
                    </StackPanel>
                </Border>
                
                <!-- Botões de Ação -->
                <Border Background="White" 
                        CornerRadius="10" 
                        Padding="25">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Salvar Configurações" 
                                x:Name="btnSalvar"
                                Style="{StaticResource SaveButtonStyle}"
                                Padding="30,12"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
