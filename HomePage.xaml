<Page x:Class="ProjetoWPF.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetoWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#F5F5F5">
    <Page.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <!-- Container principal com margem -->
    <Grid Margin="10">

        <!-- Definindo linhas do Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Linha para os botões terno/vestido -->
            <RowDefinition Height="*"/>
            <!-- Linha para o resto do conteúdo -->
        </Grid.RowDefinitions>

        <!-- RETÂNGULO COM BORDAS contendo os botões -->
        <Border Grid.Row="0" 
                BorderBrush="#34495E" 
                BorderThickness="2" 
                CornerRadius="10" 
                Padding="10"
                Background="White"
                Margin="0,0,0,10">

            <!-- Grid interno para organizar os 2 botões lado a lado -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Coluna 1: botão terno -->
                    <ColumnDefinition Width="20"/>
                    <!-- Espaçamento entre botões -->
                    <ColumnDefinition Width="*"/>
                    <!-- Coluna 2: botão vestido -->
                </Grid.ColumnDefinitions>

                <!-- Botão TERNO -->
                <Button Content="Terno" Click="Btn_Terno" Style="{StaticResource NavButtonStyle}"></Button> 

                <!-- Botão VESTIDO -->
                <Button Grid.Column="2" Content="Vestido" Click="Btn_Vestido" Style="{StaticResource NavButtonStyle}"></Button>

            </Grid>
        </Border>

        <!-- Área para o resto do conteúdo (nota fiscal, etc) -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <!-- Border como único filho do ScrollViewer -->
            <Border Background="#F5F5F5" CornerRadius="10" Padding="10">
                <!-- Frame dentro do Border -->
                <Frame x:Name="NotasFrame" 
               NavigationUIVisibility="Hidden" 
               Background="Transparent"/>
            </Border>
        </ScrollViewer>

    </Grid>
</Page>